<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.bestbet.bestbet.BetDetails">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person:"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount:"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="98dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_marginTop="153dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bet Won"
        android:height="60dp"
        android:width="160dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btnCreateBet"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update bet"
        android:layout_marginRight="20dp"
        android:height="60dp"
        android:width="160dp"
        android:id="@+id/btnUpdateBet"
        android:layout_below="@+id/btnCreateBet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bet Lost"
        android:height="60dp"
        android:width="160dp"
        android:id="@+id/btnCancel"
        android:layout_alignTop="@+id/btnCreateBet"
        android:layout_toRightOf="@+id/btnCreateBet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete bet"
        android:height="60dp"
        android:width="160dp"
        android:id="@+id/btnDeleteBet"
        android:layout_alignTop="@+id/btnUpdateBet"
        android:layout_toRightOf="@+id/btnUpdateBet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBetDescription"
        android:layout_marginTop="70dp"
        android:layout_alignRight="@+id/btnCancel"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBetAmount"
        android:layout_alignRight="@+id/btnCancel"
        android:layout_alignEnd="@+id/btnCancel"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginTop="195dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBetDate"
        android:layout_marginTop="250dp"
        android:layout_alignRight="@+id/txtBetAmount"
        android:layout_alignEnd="@+id/btnCancel"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personSpinner"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtBetAmount"
        android:layout_alignStart="@+id/txtBetAmount" />

</RelativeLayout>
